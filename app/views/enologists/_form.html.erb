<%= form_with(model: enologist, local: true) do |form| %>
  <% if enologist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(enologist.errors.count, "error") %> prohibited this enologist from being saved:</h2>

      <ul>
      <% enologist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h4>General information</h4>
  
  <div class="form-group">
    <div class="form-group">
      <%= form.label :name, class: 'font-weight-bold'%>
      <%= form.text_field :name, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :age, class: 'font-weight-bold' %>
      <%= form.number_field :age, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :nationality, class: 'font-weight-bold' %>
      <%= form.text_field :nationality, class:"form-control" %>
    </div>
  </div>

  <h4>Working at</h4>
  
  <div class="form-group">
    <%= form.fields_for :enologist_magazines do |ff|%>
      <%= render 'enologist_magazine_fields', f: ff %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add a magazine', form, :enologist_magazines, class: 'font-weight-bold'%>
    </div>
  </div>

  <div class="actions my-5">
    <%= form.submit :Submit, class: "btn btn-success" %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>
<h1>Enologists</h1>

<%= link_to 'New Enologist', new_enologist_path, class:"btn btn-primary mb-4 text-light" if current_admin %>

<table class="table"> 
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Nationality</th>
      <th>Participating in</th>
      <th>Role</th>
      <th>Wines Scored</th>
      <th>Scores</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enologists.each do |enologist| %>
      <tr>
        <td><%= enologist.name %></td>
        <td><%= enologist.age %></td>
        <td><%= enologist.nationality %></td>
        <td>
          <% enologist.magazines.each do |magazine| %>
            <li><%= magazine.name %></li> 
          <% end %>
        </td>
        <td>
          <% enologist.roles.each do |role|%>
            <li><%= role %></li>
          <% end %>
        </td>
        <td>
          <% enologist.wines.each do |wine| %>
            <li><%= wine.name %></li>
          <% end %>
        </td>
        <td>
          <% enologist.evaluations.each do |evaluation| %>
            <li><%= evaluation.score %></li>
          <% end %>
        </td>
        <% if current_admin.present? %>
          <td><%= link_to 'Show', enologist %></td>
          <td><%= link_to 'Edit', edit_enologist_path(enologist) %></td>
          <td><%= link_to 'Destroy', enologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
